# Homey MCP Server Configuration Example
# Copy this file to .env and fill in your actual values

# Homey connection details
HOMEY_LOCAL_ADDRESS=YOUR_HOMEY_IP_ADDRESS
HOMEY_LOCAL_TOKEN=your-homey-token-here
HOMEY_USE_HTTPS=true
HOMEY_VERIFY_SSL=false  # Homey uses self-signed certificates locally

# Logging
LOG_LEVEL=INFO

# Cache settings
CACHE_TTL=300

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Development modes
OFFLINE_MODE=false
DEMO_MODE=false
